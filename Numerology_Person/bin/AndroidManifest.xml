<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trubnikov.numerology_person"
    android:versionCode="5"
    android:versionName="1.05" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
	<!-- Include required permissions for Google Mobile Ads to run-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission  android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >
        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.trubnikov.numerology_person.ActivityTitle"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.trubnikov.numerology_person.MainMenu"
            android:label="Main menu" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.trubnikov.numerology_person.About"
            android:label="About" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.trubnikov.numerology_person.FirstPartner"
            android:windowSoftInputMode="stateHidden"
            android:label="FirstPartner" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.trubnikov.numerology_person.Journal"
            android:label="Journal" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.trubnikov.numerology_person.EditPartner"
            android:windowSoftInputMode="stateHidden"
            android:label="EditPartner" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name="com.trubnikov.numerology_person.SummaryTable"
            android:label="SummaryTable" 
            android:screenOrientation="portrait">
        </activity>
        
         
         <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

</application>
</manifest>
